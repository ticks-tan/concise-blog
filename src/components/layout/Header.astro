---
import ThemeToggleButton from "~/components/ThemeToggleButton.astro";
import { siteConfig, navConfig } from "~/site.config";
import { cn } from "~/utils/tailwind";

interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<nav
	class={cn(
		"w-full h-16 px-4 flex justify-between items-center border-b sticky top-0 bg-background z-50",
		className
	)}
>
	<!-- 标题 -->
	<div class="flex items-center">
		<a href="/" class="text-2xl font-bold text-transparent bg-gradient-to-r bg-clip-text from-secondary via-tertiary-container to-inverse-primary drop-shadow">{siteConfig.title}</a>
	</div>
	<!-- 导航链接 -->
	<div class="flex items-center">
		<ul class="flex items-center gap-x-2 md:gap-x-4">
			{
				navConfig.items.map((item) => (
					<li class="list-none">
						<a
							href={item.href}
							class="text-lg hover:text-primary hover:underline text-on-background/80"
						>
							{item.label}
						</a>
					</li>
				))
			}
			<!-- 主题切换 -->
			<li class="inline-flex items-center list-none">
				<ThemeToggleButton iconSize={{ width: 28, height: 28 }} />
			</li>
		</ul>
	</div>
</nav>
